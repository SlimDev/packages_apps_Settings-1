<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
   android:title="@string/candy_interface_title" >

<!-- Buttons -->
        <PreferenceScreen
	      android:id="@+id/button_settings"
	      android:fragment="com.android.settings.candy.ButtonSettings"
	      android:title="@string/button_settings_title"
	    />

<!-- expanded desktop -->
        <PreferenceScreen
          android:id="@+id/expanded_desktop"
          android:fragment="com.android.settings.candy.ExpandedDesktop"
          android:title="@string/expanded_desktop_category"
        />

<!-- Gestures -->
       <PreferenceScreen
          android:id="@+id/gestures"
          android:fragment="com.android.settings.candy.CandyGestures"
          android:title="@string/gestures_title" />

<!-- Lights Settings -->
       <PreferenceScreen
          android:id="@+id/lights_settings"
          android:fragment="com.android.settings.candy.LightsSettings"
          android:title="@string/lights_settings_title"
        />

<!-- DUI -->
       <PreferenceScreen
          android:id="@+id/navigation_options"
          android:fragment="com.android.settings.dui.fragments.NavbarSettings"
          android:title="@string/navigationbar_settings_title"
       />

<!-- Statusbar -->
        <PreferenceScreen
          android:id="@+id/statusbar_settings"
          android:fragment="com.android.settings.candy.StatusBarSettings"
          android:title="@string/statusbar_settings_title"
        /> 
</PreferenceScreen>
